<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:background="#0A3D62"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:paddingLeft="15dp"
            android:src="@drawable/back_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="មតិត្រឡប់"
            android:fontFamily="@font/odor"
            android:textSize="22sp"
            />
    </LinearLayout>
    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginBottom="30dp"
            android:padding="27dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="string/app_feedback"/>
        <EditText
            android:background="@drawable/borderfeedback"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="5dp"
            android:hint="បញ្ចេញមតិយោបល់"
            android:fontFamily="@font/odor"
            android:gravity="clip_horizontal"
            android:textColor="#0A3D62"/>
        <Button
            android:id="@+id/bt_sendfeedback"
            android:layout_gravity="center"
            android:background="@drawable/buttonrequest"
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:fontFamily="@font/odor"
            android:text="ដាក់ស្នើ"
            android:textSize="22sp"
            android:textColor="#FFFF"/>

    </LinearLayout>


</LinearLayout>